<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/White"
                        android:text="Drinks:"/>
                <LinearLayout
                        android:id="@+id/linear1_category_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/coffee"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:src="@drawable/coffee"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/coffee"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/White"
                                android:text="Coffee"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/ice_blend"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:src="@drawable/iceblend"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ice_blend"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/White"
                                android:text="Ice Blend"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/soft_drink"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:src="@drawable/softdrink"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/soft_drink"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/White"
                                android:text="Soft Drink"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/water"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:src="@drawable/water"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/water"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/White"
                                android:text="Water"/>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear1_category_layout"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="@color/White"
                        android:text="Desert:"/>

                <LinearLayout
                        android:id="@+id/linear2_category_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title2"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="0dp">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/cake"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:scaleX="0.6"
                                android:scaleY="0.6"
                                android:src="@drawable/cake"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cake"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/White"
                                android:text="Cake"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/cupcake"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:scaleX="0.6"
                                android:scaleY="0.6"
                                android:src="@drawable/cupcake"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cupcake"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/White"
                                android:text="Cupcake"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/cookie"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:src="@drawable/cookie"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cookie"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/White"
                                android:text="Cookie"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/bread"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:scaleX="0.6"
                                android:scaleY="0.6"
                                android:src="@drawable/bread"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bread"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/White"
                                android:text="Bread"/>
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom"
            android:paddingTop="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:textColor="@color/Red"
            android:textSize="20sp"
            android:text="Showing all product:"
            />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginTop="40dp"
            app:layout_anchor="@id/app_bar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            style="@style/Widget.MaterialComponents.BottomAppBar"
            app:hideOnScroll="true"
            app:backgroundTint="@color/cardview_dark_background"
            app:fabAlignmentMode="end"
            app:fabCradleMargin="16dp"
            app:menu="@menu/home"
            app:fabCradleRoundedCornerRadius="30dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopping_cart_24dp"
            app:layout_anchor="@id/bottom_app_bar"
    />
    <ImageView
            android:id="@+id/circle"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_anchor="@id/fab"
            app:layout_anchorGravity="end"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/notification_badge"
            app:layout_anchorGravity="center"
            android:elevation="18dp"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:text="10"/>
    <TextView
            android:id="@+id/notification_badge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_anchor="@id/circle"
            app:layout_anchorGravity="start|bottom"
            android:visibility="visible"
            android:paddingTop="2dp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:background="@drawable/circle"
            android:elevation="19dp"
            android:textStyle="bold"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>