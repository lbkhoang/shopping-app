<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".AdminCategoryActivity">

    <TextView
            android:id="@+id/slogan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Add New Product"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold"
    />

    <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_below="@+id/slogan_category"
            android:background="@android:color/darker_gray"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:text="Drinks:"/>
    <LinearLayout
            android:id="@+id/linear1_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/coffee"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/coffee"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coffee"
                    android:layout_centerHorizontal="true"
                    android:text="Coffee"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ice_blend"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/iceblend"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ice_blend"
                    android:layout_centerHorizontal="true"
                    android:text="Ice Blend"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/soft_drink"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/softdrink"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/soft_drink"
                    android:layout_centerHorizontal="true"
                    android:text="Soft Drink"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/water"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/water"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/water"
                    android:layout_centerHorizontal="true"
                    android:text="Water"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:text="Desert:"/>

    <LinearLayout
            android:id="@+id/linear2_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1_category_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="45dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/cake"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/cake"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cake"
                    android:layout_centerHorizontal="true"
                    android:text="Cake"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/cupcake"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/cupcake"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cupcake"
                    android:layout_centerHorizontal="true"
                    android:text="Cupcake"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/cookie"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/cookie"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cookie"
                    android:layout_centerHorizontal="true"
                    android:text="Cookie"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/bread"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/bread"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bread"
                    android:layout_centerHorizontal="true"
                    android:text="Bread"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>