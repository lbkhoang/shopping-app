<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal">
                <LinearLayout
                        android:id="@+id/linear1_category_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">

                    <ImageView
                            android:id="@+id/t_shirts"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/coffee"
                    />

                    <ImageView
                            android:id="@+id/sports_t_shirts"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/iceblend"
                    />

                    <ImageView
                            android:id="@+id/female_dresses"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/softdrink"
                    />

                    <ImageView
                            android:id="@+id/sweathers"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/water"
                    />

                </LinearLayout>



                <LinearLayout
                        android:id="@+id/linear2_category_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear1_category_layout"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_marginTop="5dp">

                    <ImageView
                            android:id="@+id/glasses"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/camera_icon"
                    />

                    <ImageView
                            android:id="@+id/purses_bags_wallets"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/camera_icon"
                    />

                    <ImageView
                            android:id="@+id/hats_caps"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/camera_icon"
                    />

                    <ImageView
                            android:id="@+id/shoes"
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:src="@drawable/camera_icon"
                            android:layout_marginStart="16dp"
                    />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            style="@style/Widget.MaterialComponents.BottomAppBar"
            app:hideOnScroll="true"
            app:backgroundTint="@color/cardview_dark_background"
            app:fabAlignmentMode="end"
            app:fabCradleMargin="16dp"
            app:menu="@menu/home"
            app:fabCradleRoundedCornerRadius="30dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_black_24dp"
            app:layout_anchor="@id/bottom_app_bar"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
