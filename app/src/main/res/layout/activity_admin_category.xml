<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".AdminCategoryActivity">

    <TextView
            android:id="@+id/slogan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Add New Product"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold"
    />

    <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_below="@+id/slogan_category"
            android:background="@android:color/darker_gray"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:text="Drinks:"/>
    <LinearLayout
            android:id="@+id/linear1_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/coffee"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/coffee"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coffee"
                    android:layout_centerHorizontal="true"
                    android:text="Coffee"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ice_blend"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/iceblend"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ice_blend"
                    android:layout_centerHorizontal="true"
                    android:text="Ice Blend"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/soft_drink"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/softdrink"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/soft_drink"
                    android:layout_centerHorizontal="true"
                    android:text="Soft Drink"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/water"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/water"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/water"
                    android:layout_centerHorizontal="true"
                    android:text="Water"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:text="Desert:"/>

    <LinearLayout
            android:id="@+id/linear2_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1_category_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="45dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/cake"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/cake"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cake"
                    android:layout_centerHorizontal="true"
                    android:text="Cake"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/cupcake"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/cupcake"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cupcake"
                    android:layout_centerHorizontal="true"
                    android:text="Cupcake"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/cookie"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/cookie"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cookie"
                    android:layout_centerHorizontal="true"
                    android:text="Cookie"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/bread"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/bread"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bread"
                    android:layout_centerHorizontal="true"
                    android:text="Bread"/>
        </RelativeLayout>


    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">


    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            style="@style/Widget.MaterialComponents.BottomAppBar"
            app:hideOnScroll="true"
            app:backgroundTint="@color/cardview_dark_background"
            app:fabAlignmentMode="end"
            app:fabCradleMargin="16dp"
            app:menu="@menu/home"
            app:fabCradleRoundedCornerRadius="30dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopping_cart_24dp"
            app:layout_anchor="@id/bottom_app_bar"
    />
    <ImageView
            android:id="@+id/circle"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_anchor="@id/fab"
            app:layout_anchorGravity="end"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/notification_badge"
            app:layout_anchorGravity="center"
            android:elevation="18dp"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:text="10"/>
    <TextView
            android:id="@+id/notification_badge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_anchor="@id/circle"
            app:layout_anchorGravity="start|bottom"
            android:visibility="visible"
            android:paddingTop="2dp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:background="@drawable/circle"
            android:elevation="19dp"
            android:textStyle="bold"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>