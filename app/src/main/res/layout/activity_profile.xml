<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ProfileActivity"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/profile_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_account_circle_24dp"
            android:background="@color/Gray"
            android:scaleType="fitXY"
            android:contentDescription="Profile Pic"/>
    <RelativeLayout
            android:id="@+id/address_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_img"
            android:paddingTop="20dp"
            android:layout_centerHorizontal="true"
            android:paddingStart="20dp"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black_24dp"/>
        <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/address_icon"
                android:text="Address"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/address"
                android:text=">"
                android:paddingEnd="20dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/password_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_linear"
            android:paddingTop="20dp"
            android:layout_centerHorizontal="true"
            android:paddingStart="20dp"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vpn_key_black_24dp"/>
        <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/password_icon"
                android:text="Password"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/password"
                android:text=">"
                android:paddingEnd="20dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/logout_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_linear"
            android:paddingTop="20dp"
            android:layout_centerHorizontal="true"
            android:paddingStart="20dp"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/logout_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_error_black_24dp"/>
        <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/logout_icon"
                android:text="Log Out"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/logout"
                android:text=">"
                android:paddingEnd="20dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/admin_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_linear"
            android:paddingTop="20dp"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:paddingStart="20dp"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/admin_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"/>
        <TextView
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/admin_icon"
                android:text="Product Management"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/admin"
                android:text=">"
                android:paddingEnd="20dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textSize="20sp"/>
    </RelativeLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_alignParentBottom="true"
            android:layout_height="100dp"
            android:layout_width="match_parent">
        <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottom_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                style="@style/Widget.MaterialComponents.BottomAppBar"
                app:hideOnScroll="true"
                app:backgroundTint="@color/cardview_dark_background"
                app:fabAlignmentMode="end"
                app:fabCradleMargin="16dp"
                app:menu="@menu/home"
                app:fabCradleRoundedCornerRadius="30dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shopping_cart_24dp"
                app:layout_anchor="@id/bottom_app_bar"
        />
        <ImageView
                android:id="@+id/circle"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_anchor="@id/fab"
                app:layout_anchorGravity="end"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_anchor="@id/notification_badge"
                app:layout_anchorGravity="center"
                android:elevation="18dp"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:text="10"/>
        <TextView
                android:id="@+id/notification_badge"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_anchor="@id/circle"
                app:layout_anchorGravity="start|bottom"
                android:visibility="visible"
                android:paddingTop="2dp"
                android:textColor="@color/White"
                android:textAlignment="center"
                android:background="@drawable/circle"
                android:elevation="19dp"
                android:textStyle="bold"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>